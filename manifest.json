{
  "manifest_version": 3,
  "name": "yomitools",
  "version": "1",
  "description": "A multilingual language learning helper. Designed primarily with reading in mind",
  "icons": {
      "48": "icons/border-48.png"
  },

  "action": {
    "default_icon": "icons/border-48.png",
    "default_title": "MultiLingual Scanner",
    "default_popup": "popup/popup.html"
  },

  "minimum_chrome_version": "102.0.0.0",
    "options_ui": {
        "page": "settings.html",
        "open_in_tab": true
    },

    "permissions": [
        "storage",
        "unlimitedStorage",
        "scripting",
        "contextMenus"
    ],
    "optional_permissions": [
        "clipboardRead",
        "nativeMessaging"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_security_policy": {
      "extension_pages": "default-src 'self'; script-src 'self'; img-src blob: 'self'; style-src 'self' 'unsafe-inline'; media-src *; connect-src *"
  },
  "browser_specific_settings": {
    "gecko": {
        "id": "{6b733b82-9261-47ee-a595-2dda294a4d08}",
        "strict_min_version": "115.0"
    },
    "gecko_android": {
        "strict_min_version": "115.0"
    }
}

}
