{
  "manifest_version": 3,
  "name": "yomitools",
  "version": "1",
  "description": "A multilingual language immersion helper. ",
  "icons": {
      "48": "images/yomitools-48.png"
  },


  "background": {
    "scripts": ["../js/background.js"],
    "type": "module"
  },

  "action": {
    "default_icon": "images/yomitools-48.png",
    "default_title": "yomitools",
    "default_popup": "popup.html"
  },

  "minimum_chrome_version": "102.0.0.0",
    "options_ui": {
        "page": "settings.html",
        "open_in_tab": true
    },

    "permissions": [
        "storage",
        "unlimitedStorage",
        "scripting",
        "contextMenus"
    ],
    "optional_permissions": [
        "clipboardRead",
        "nativeMessaging"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_security_policy": {
      "extension_pages": "default-src 'self'; script-src 'self'; img-src blob: 'self'; style-src 'self'; media-src *; connect-src *"
  },
  "browser_specific_settings": {
    "gecko": {
        "id": "{4cfe7c39-95dd-46c5-bbe7-1dcf92ac6a08}",
        "strict_min_version": "115.0"
    },
    "gecko_android": {
        "strict_min_version": "115.0"
    }
}

}
